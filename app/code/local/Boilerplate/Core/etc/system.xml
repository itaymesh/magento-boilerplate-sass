<?xml version="1.0"?>
<config>
    <tabs>
        <boilareplate translate="label">
            <label>Boilerplate</label>
            <sort_order>00</sort_order>
        </boilareplate>
    </tabs>

    <sections>
        <boilareplate_design translate="label" module="boilerplate_core">
            <label>Design</label>
            <tab>boilareplate</tab>
            <sort_order>0</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <header>
                    <label>Header</label>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <masthead_title translate="label">
                            <label>Header Note</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </masthead_title>
                        <masthead_link translate="label">
                            <label>Header Link</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>You can use relative URL address for inner website addresses (e.g. for http://www.domain.com/page.html use only page.html)</comment>
                        </masthead_link>
                    </fields>
                </header>
                <newsletter translate="label">
                    <label>Newsletter</label>
                    <sort_order>2</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <footer_title translate="label">
                            <label>Footer Title</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </footer_title>
                    </fields>
                </newsletter>
            </groups>
        </boilareplate_design>
    </sections>
</config>