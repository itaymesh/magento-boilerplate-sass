<?xml version="1.0"?>
<layout version="0.1.0">

    <!-- Default handle, loaded on most pages -->
    <default>

        <!-- ##################### GLOBAL BLOCKS ########################### -->


        <!-- ### ROOT ### -->
        <reference name="root">
            <!-- add layout default class name to body -->
            <action method="addBodyClass">
                <className>layout-default</className>
            </action>
        </reference>

        <!-- ### HEADER ### -->
        <reference name="top.links">
            <action method="removeLinkBlock">
                <blockName>wishlist_link</blockName>
            </action>
        </reference>

        <!-- ### FOOTER ### -->
        <reference name="footer">

            <remove name="footer_links"/>
            <remove name="cms_footer_links"/>

        </reference>

        <!--Magento's Default Sidebar Blocks-->
       <!-- <remove name="cart_sidebar"/>
        &lt;!&ndash;Cart Sidebar&ndash;&gt;
        <remove name="wishlist_sidebar"/>
        &lt;!&ndash;Wishlist Sidebar&ndash;&gt;
        <remove name="catalog.compare.sidebar"/>
        &lt;!&ndash;Compare Items Sidebar&ndash;&gt;
        <remove name="right.permanent.callout"/>
        &lt;!&ndash;Right Callout Sample Data&ndash;&gt;
        <remove name="left.permanent.callout"/>
        &lt;!&ndash;Left Callout Sample Data&ndash;&gt;
        <remove name="right.reports.product.viewed"/>
        &lt;!&ndash;Viewed Products&ndash;&gt;
        <remove name="right.reports.product.compared"/>

        <remove name="left.newsletter"/>
        &lt;!&ndash;Sidebar Newsletter&ndash;&gt;
        <remove name="right.poll"/>
        &lt;!&ndash;Poll&ndash;&gt;
        <remove name="tags_popular"/>
        &lt;!&ndash;Popular Tags&ndash;&gt;
        <remove name="paypal.partner.right.logo"/>
        &lt;!&ndash;Paypal logo Sample Data&ndash;&gt;
        <remove name="catalogsearch.leftnav"/>  -->


    </default>

    <!--################ CMS  ############################-->
    <cms_index_index>
        <reference name="root">
            <action method="setTemplate">
                <template>page/1column.phtml</template>
            </action>

        </reference>

    </cms_index_index>
    <!--################ CATALOGSEARCH  ############################-->

    <catalogsearch_result_index>
        <reference name="root">
            <action method="setTemplate">
                <template>page/2columns-left.phtml</template>
            </action>
        </reference>
        <reference name="left">
            <remove name="tags_popular"/>
            <remove name="left.newsletter"/>
            <remove name="left.permanent.callout"/>
        </reference>

    </catalogsearch_result_index>

    <!--################## CUSTOMER #####################-->
    <customer_account>
        <reference name="customer_account_navigation">
            <action method="removeLink">
                <name>recurring_profiles</name>
            </action>
            <action method="removeLink">
                <name>billing_agreements</name>
            </action>
            <action method="removeLink">
                <name>OAuth Customer Tokens</name>
            </action>
            <action method="removeLink">
                <name>downloadable_products</name>
            </action>
        </reference>
        <reference name="left">
            <remove name="cart_sidebar"/>
            <remove name="catalog.compare.sidebar"/>
            <remove name="sale.reorder.sidebar"/>
        </reference>
    </customer_account>


    <!-- ##################### CATALOG ########################### -->

    <!-- CATEGORY -->
    <catalog_category_default>
        <reference name="root">
            <action method="setTemplate">
                <template>page/2columns-left.phtml</template>
            </action>
        </reference>
        <reference name="left">

            <remove name="tags_popular"/>
            <remove name="left.newsletter"/>
            <remove name="left.permanent.callout"/>
        </reference>
    </catalog_category_default>
    <catalog_category_layered>
        <reference name="root">
            <action method="setTemplate">
                <template>page/2columns-left.phtml</template>
            </action>
        </reference>
        <reference name="left">
            <remove name="tags_popular"/>
            <remove name="left.newsletter"/>
            <remove name="left.permanent.callout"/>

        </reference>

    </catalog_category_layered>

    <!-- PRODUCT -->
    <catalog_product_view>
        <reference name="root">
            <action method="setTemplate">
                <template>page/1column.phtml</template>
            </action>
        </reference>
        <reference name="product.info">
            <action method="unsetChild">
                <child>additional</child>
            </action>
        </reference>
        <remove name="product_tag_list"/>
    </catalog_product_view>

    <!--############## contacts ##############-->
    <contacts_index_index>

        <reference name="root">
            <action method="setTemplate">
                <template>page/1column.phtml</template>
            </action>
        </reference>
    </contacts_index_index>


    <!--###################### success page#########################-->
    <checkout_onepage_success>
        <reference name="root">
            <action method="setTemplate">
                <template>page/1column.phtml</template>
            </action>
        </reference>
    </checkout_onepage_success>

    <print>

        <reference name="head">

            <!-- Add our assets -->
            <action method="addCss">
                <stylesheet>css/style.css</stylesheet>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <name>js/script-ck.js</name>
            </action>

        </reference>

    </print>

</layout>
