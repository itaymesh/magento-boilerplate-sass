<?php if(Mage::helper('boilerplate_social/facebook')->getAppConfig('fb_application_id')): ?>

	<div id="fb-root"></div>
	<script type="text/javascript">

		window.fbAsyncInit = function() {
			FB.init({
				appId: '<?php echo Mage::helper('boilerplate_social/facebook')->getAppConfig('fb_application_id') ?>',
				oauth: true,
				status: true,
				cookie: true,
				xfbml: true,
				channelUrl: "//"+window.location.hostname+"/fbopengraph/channel"
			});

		};
		(function() {
			var e = document.createElement('script'); e.async = true;
			e.src = document.location.protocol + // fix for IE bug where is complains about mixed content in the like button iframe
				'//connect.facebook.net/<?php echo Mage::helper('boilerplate_social/facebook')->getStoreLocale() ?>/all.js';
			document.getElementById('fb-root').appendChild(e);
		}());

	</script>

<?php endif; ?>
